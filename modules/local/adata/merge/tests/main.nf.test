nextflow_process {

    name "Test Process ADATA_MERGE"
    script "modules/local/adata/merge/main.nf"
    process "ADATA_MERGE"

    tag "modules"
    tag "modules_local"

    setup {
        run("ADATA_UNIFY") {
            script "modules/local/adata/unify/main.nf"
            process {
                """
                input[0] = channel.of([
                        [id: 'SRR28679756'],
                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/scrnaseq/h5ad/SRR28679756_filtered_matrix.h5ad', checkIfExists: true)
                    ], [
                        [id: 'SRR28679759'],
                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/scrnaseq/h5ad/SRR28679759_filtered_matrix.h5ad', checkIfExists: true)
                    ]
                )
                input[1] = 'sample'
                input[2] = ''
                input[3] = 'unknown'
                input[4] = 'index'
                input[5] = 'X'
                input[6] = 'make_unique'
                input[7] = false
                """
            }
        }
    }

    test("Should run without base") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = ADATA_UNIFY.out.h5ad.map{ _meta, h5ad -> [[id: 'combined'], h5ad] }.groupTuple()
                input[1] = [[], []]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("Should run without base - stub") {

        options '-stub'

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = ADATA_UNIFY.out.h5ad.map{ _meta, h5ad -> [[id: 'combined'], h5ad] }.groupTuple()
                input[1] = [[], []]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("Should run with base") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                ch_h5ad = ADATA_UNIFY.out.h5ad.branch{ meta, h5ad ->
                    sample1: meta.id == 'SRR28679756'
                    sample2: meta.id == 'SRR28679759'
                }
                input[0] = ch_h5ad.sample1
                input[1] = ch_h5ad.sample2
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("Should run with base - stub") {

        options '-stub'

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                ch_h5ad = ADATA_UNIFY.out.h5ad.branch{ meta, h5ad ->
                    sample1: meta.id == 'SRR28679756'
                    sample2: meta.id == 'SRR28679759'
                }
                input[0] = ch_h5ad.sample1
                input[1] = ch_h5ad.sample2
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }
}
