nextflow_process {

    name "Test Process SEURAT_INTEGRATION"
    script "modules/local/seurat/integration/main.nf"
    process "SEURAT_INTEGRATION"

    tag "modules"
    tag "modules_local"

    setup {
        run("SCANPY_HVGS") {
            script "modules/local/scanpy/hvgs/main.nf"
            process {
                """
                input[0] = channel.of([
                        [ id: 'test' ],
                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/scrnaseq/h5ad/combined_filtered_matrix.h5ad', checkIfExists: true)
                    ]
                )
                input[1] = 100
                input[2] = []
                """
            }
        }
        run("SCANPY_FILTER") {
            script "modules/local/scanpy/filter/main.nf"
            process {
                """
                input[0] = SCANPY_HVGS.out.h5ad
                input[1] = "index"
                input[2] = 1
                input[3] = 1
                input[4] = 1
                input[5] = 1
                input[6] = 100
                input[7] = []
                """
            }
        }
    }

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = SCANPY_FILTER.out.h5ad
                input[1] = 'sample'
                """
            }
        }

        then {
            assertAll(
            { assert process.success },
            { assert snapshot(
                    process.out.versions,
                    // Hashing of h5ad does not work due to this issue:
                    // https://github.com/scverse/anndataR/issues/272
                    file(process.out.h5ad.get(0).get(1)).exists()
                ).match()
            },
            )
        }

    }

    test("Should run without failures - stub") {

        options '-stub'

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = SCANPY_FILTER.out.h5ad
                input[1] = 'sample'
                """
            }
        }

        then {
            assertAll(
            { assert process.success },
            { assert snapshot(process.out).match() }
            )
        }

    }

}
