nextflow_process {

    name "Test Process DOUBLET_REMOVAL"
    script "modules/local/doublet_detection/doublet_removal/main.nf"
    process "DOUBLET_REMOVAL"

    tag "modules"
    tag "modules_local"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = channel.of([
                        [ id: 'test' ],
                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/scrnaseq/h5ad/SRR28679759_filtered_matrix.h5ad', checkIfExists: true),
                        [
                            file(params.pipelines_testdata_base_path + '/intermediates/doublet_detection/test_doubletdetection.pkl', checkIfExists: true),
                            file(params.pipelines_testdata_base_path + '/intermediates/doublet_detection/test_scds.csv', checkIfExists: true),
                            file(params.pipelines_testdata_base_path + '/intermediates/doublet_detection/test_scrublet.pkl', checkIfExists: true),
                            file(params.pipelines_testdata_base_path + '/intermediates/doublet_detection/test_solo.pkl', checkIfExists: true)
                        ]
                    ]
                )
                input[1] = 2
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("Should run without failures - stub") {

        options "-stub"

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = channel.of([
                        [ id: 'test' ],
                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/scrnaseq/h5ad/SRR28679759_filtered_matrix.h5ad', checkIfExists: true),
                        [
                            file(params.pipelines_testdata_base_path + '/intermediates/doublet_detection/test_doubletdetection.pkl', checkIfExists: true),
                            file(params.pipelines_testdata_base_path + '/intermediates/doublet_detection/test_scds.csv', checkIfExists: true),
                            file(params.pipelines_testdata_base_path + '/intermediates/doublet_detection/test_scrublet.pkl', checkIfExists: true),
                            file(params.pipelines_testdata_base_path + '/intermediates/doublet_detection/test_solo.pkl', checkIfExists: true)
                        ]
                    ]
                )
                input[1] = 2
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
