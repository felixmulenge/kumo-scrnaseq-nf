nextflow_process {

    name "Test Process CELDA_DECONTX"
    script "modules/local/celda/decontx/main.nf"
    process "CELDA_DECONTX"

    tag "modules"
    tag "modules_local"

    test("Should run without failures without batch column") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = channel.of([
                        [ id: 'test' ],
                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/scrnaseq/h5ad/SRR28679756_filtered_matrix.h5ad', checkIfExists: true),
                        []
                    ]
                )
                input[1] = []
                input[2] = "X"
                input[3] = "X"
                """
            }
        }

        then {
            assertAll(
            { assert process.success },
            { assert snapshot(
                // Hashing does not work due to this issue:
                // https://github.com/scverse/anndataR/issues/272
                process.out.versions,
                file(process.out.h5ad.get(0).get(1)).name
            ).match() }
            )
        }

    }

    test("Should run without failures without raw - single batch") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = channel.of([
                        [ id: 'test' ],
                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/scrnaseq/h5ad/SRR28679756_filtered_matrix.h5ad', checkIfExists: true),
                        []
                    ]
                )
                input[1] = "sample"
                input[2] = "X"
                input[3] = "X"
                """
            }
        }

        then {
            assertAll(
            { assert process.success },
            { assert snapshot(
                // Hashing does not work due to this issue:
                // https://github.com/scverse/anndataR/issues/272
                process.out.versions,
                file(process.out.h5ad.get(0).get(1)).name
            ).match() }
            )
        }

    }

