nextflow_process {

    name "Test Process SCVITOOLS_SCANVI"
    script "modules/local/scvitools/scanvi/main.nf"
    process "SCVITOOLS_SCANVI"

    tag "modules"
    tag "modules_local"

    setup {
        run("SCANPY_PCA") {
            script "modules/local/scanpy/pca/main.nf"
            process {
                """
                input[0] = channel.of([
                        [ id: 'test' ],
                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/scrnaseq/h5ad/combined_filtered_matrix.h5ad', checkIfExists: true)
                    ]
                )
                input[1] = "X_pca"
                """
            }
        }
        run("SCANPY_NEIGHBORS") {
            script "modules/local/scanpy/neighbors/main.nf"
            process {
                """
                input[0] = SCANPY_PCA.out.h5ad
                input[1] = "X_pca"
                """
            }
        }
        run("SCANPY_LEIDEN") {
            script "modules/local/scanpy/leiden/main.nf"
            process {
                """
                input[0] = SCANPY_NEIGHBORS.out.h5ad
                input[1] = 1.0
                input[2] = "leiden"
                input[3] = false
                """
            }
        }
        run("SCANPY_HVGS") {
            script "modules/local/scanpy/hvgs/main.nf"
            process {
                """
                input[0] = SCANPY_LEIDEN.out.h5ad
                input[1] = 100
                input[2] = []
                """
            }
        }
    }

    test("Should run without failures") {

        config './nextflow.config'

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = SCANPY_HVGS.out.h5ad
                input[1] = [[], []]
                input[2] = ['leiden', 'unknown']
                input[3] = 'sample'
                input[4] = ''
                input[5] = ''
                """
            }
        }

        then {
            assertAll(
            { assert process.success },
            { assert snapshot(
                    // Hashes are not stable due to floating point inaccuracies
                    file(process.out.h5ad[0][1]).size(),
                    file(process.out.h5ad[0][1]).name,
                    file(process.out.model[0][1]).size(),
                    file(process.out.model[0][1]).name,
                    file(process.out.obsm[0]).size(),
                    file(process.out.obsm[0]).name,
                    process.out.versions
                ).match()
            },
            )
        }

    }

    test("Should run without failures - stub") {

        config './nextflow.config'
        options '-stub'

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = SCANPY_HVGS.out.h5ad
                input[1] = [[], []]
                input[2] = ['leiden', 'unknown']
                input[3] = 'sample'
                input[4] = ''
                input[5] = ''
                """
            }
        }

        then {
            assertAll(
            { assert process.success },
            { assert snapshot(process.out).match() }
            )
        }

    }

}
