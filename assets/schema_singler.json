{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/scdownstream/master/assets/schema_singler.json",
    "title": "nf-core/scdownstream pipeline - params.singler schema",
    "description": "Schema for the file provided with params.singler",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "label": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Label must be provided and cannot contain spaces",
                "meta": ["label"]
            },
            "reference": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Reference must be provided and cannot contain spaces"
            },
            "version": {
                "type": "string",
                "pattern": "^\\S+$",
                "default": null,
                "errorMessage": "Reference version cannot contain spaces",
                "meta": ["version"]
            }
        },
        "required": ["id", "label", "reference"]
    }
}
