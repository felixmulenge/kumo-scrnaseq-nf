nextflow_workflow {

    name "Test Workflow CELLTYPE_ASSIGNMENT"
    script "subworkflows/local/celltype_assignment/main.nf"
    workflow "CELLTYPE_ASSIGNMENT"

    tag "subworkflows"
    tag "subworkflows_local"

    test("Should run with both celltypist and singler") {

        when {
            params {
                outdir = "$outputDir"
                celltypist_model = "Adult_COVID19_PBMC"
                celldex_reference = "https://raw.githubusercontent.com/nf-core/test-datasets/scdownstream/singleR/references.csv"
            }
            workflow {
                """
                input[0] = channel.of([
                        [ id: 'test' ],
                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/scrnaseq/h5ad/SRR28679759_filtered_matrix.h5ad', checkIfExists: true),
                        "index"
                    ]
                )
                """
            }
        }

        then {
            assert workflow.success
            assert snapshot(
                workflow.out.versions,
                workflow.out.obs.size()
            ).match()
        }

    }

    test("Should run without failures - stub") {

        options '-stub'

        when {
            params {
                outdir = "$outputDir"
                celltypist_model = "Adult_COVID19_PBMC"
                celldex_reference = "https://raw.githubusercontent.com/nf-core/test-datasets/scdownstream/singleR/references.csv"
            }
            workflow {
                """
                input[0] = channel.of([
                        [ id: 'test' ],
                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/scrnaseq/h5ad/SRR28679759_filtered_matrix.h5ad', checkIfExists: true),
                        "index"
                    ]
                )
                """
            }
        }

        then {
            assert workflow.success
            assert snapshot(workflow.out).match()
        }

    }

}
